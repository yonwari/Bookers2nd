<!-- 書籍一覧 -->
  <div class="col-xs-9">
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id), class:"book_#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

