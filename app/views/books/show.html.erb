<div class="row">
<!-- 共通部分 -->
  <%= render 'books/list', book:@new_book, user:@user %>

<!-- 詳細情報 -->
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @book.user, :image, :fill, 50, 50, format: 'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpg" %>
            <%= link_to @user.name, user_path(@book.user.id), class:"user_#{@user.id}" %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <!-- 自ユーザーの時のみ編集・削除ボタン表示 -->
          <% if current_user.id == @book.user.id %>
            <td>
              <%= link_to "edit", edit_book_path(@book.id), class:"edit_book_#{@book.id}" %>
            </td>
            <td>
              <%= link_to "destroy", book_path(@book.id), method: :delete, class:"destroy_book_#{@book.id}" %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>