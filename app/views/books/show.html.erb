<div class="row">
<!-- 共通部分 -->
  <%= render 'books/list', book:@new_book, user:@user %>

<!-- 詳細情報 -->
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @book.user, :image, :fill, 50, 50, format: 'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpg" %>
            <%= link_to @user.name, user_path(@book.user.id) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to "edit", edit_book_path(@book.id) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(@book.id), method: :delete %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>