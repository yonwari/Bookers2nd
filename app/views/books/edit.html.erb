<div class="container">
  <!-- エラーメッセージ -->
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- エラーここまで -->

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1> Editing Book</h1>
      <%= form_for(@book, class:"edit_book", id:"edit_book_#{@book.id}") do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"col-xs-12 book_title", placeholder:"タイトル" %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"col-xs-12 book_body", placeholder:"感想" %><br>
        </div>
        <div class="actions row">
          <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id), class:"book_#{@book.id}" %>
      |
      <%= link_to "Back", books_path, class:"back" %>
    </div>
  </div>
</div>
