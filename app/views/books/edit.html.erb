<div class="book-edit-container">
  <!-- エラーメッセージ -->
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- エラーここまで -->
  <h1> Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class:"book-title", placeholder:"タイトル" %>
    <p>Opinion</p>
    <%= f.text_field :body, class:"book-body", placeholder:"感想" %><br>
    <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
  <% end %>
  <%= link_to "Show", book_path(@book.id), class:"book_#{@book.id}" %>
  |
  <%= link_to "Back", books_path, class:"back" %>
</div>
