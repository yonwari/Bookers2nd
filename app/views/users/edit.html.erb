<div class="container">
  <div class="form-body">
  <!-- エラーメッセージ -->
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <!-- エラーここまで -->
    <%= form_for(@user, class:"edit_user") do |f| %>
      <div class="field">
        <h2>User info</h2>
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"name", id:"user_name", placeholder:"name" %>
      </div>
      <div class="field">
        <label for="user_image">Image</label>
        <%= f.attachment_field :image, placeholder:"ファイルを選択", class:"user_image" %>
      </div>
      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"introduction", id:"user_introduction", placeholder:"introduction" %>
      </div>
      <div class="actions">
        <%= f.submit "Update User", class:"update_user" %>
      </div>
    <% end %>
  </div>
</div>