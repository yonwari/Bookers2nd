<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2nd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- header -->
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h3>Bookers</h3>
        </nav>
        <nav class="nav navbar-nav navbar-right">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <!-- ログイン時の表示 -->
              <li>
                <%= link_to "Home", user_path(current_user.id), class:"home" %>
              </li>
              <li>
                <%= link_to "Users", users_path, class:"users" %>
              </li>
              <li>
                <%= link_to "Books", books_path, class:"books" %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete, class:"logout" %>
              </li>
            <% else %>
            <!-- 未ログイン時の表示 -->
              <li>
                <%= link_to "Home", "/", class:"home" %>
              </li>
              <li>
                <%= link_to "About", "/about", class:"about" %>
              </li>
              <li>
                <%= link_to "sign up", "/users/sign_up", class:"sign_up" %>
              </li>
              <li>
                <%= link_to "login", "/users/sign_in", class:"sign_in" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <!-- ここにメイン -->
    <%= yield %>

    <footer>
      <div class="container">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
